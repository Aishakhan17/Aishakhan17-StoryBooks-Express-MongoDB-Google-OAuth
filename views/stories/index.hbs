<h1 class="center-align">Stories</h1>

<ul class="search-form">
    <li>
        <form action="/stories/search/:query" id="search-site" method="GET">
        <div class="input-group">
            <i class="fas fa-search fa-large"></i>
            <div class="input-field">
                <input type="search" id="search" name="query" placeholder="search by title">
                <label for="search" class="label-icon"></label>
            </div>
            <button class="input-group-addon btn">Search</button>
        </div>
        </form>
    </li>
</ul>
<div class="row">
	{{#each stories}}
		<div class="col s12 m4">
			<div class="card">
				<div class="card-image">
					{{{editIcon user ../user _id}}}
				</div>
				<div class="card-content center-align">
					<h5>{{stripTags (truncate title 20)}}</h5>
					<p>{{stripTags (truncate body 50)}}</p>
					<br />
					<div class="chip">
						<img src="{{user.image}}" alt="" />
						<a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
					</div>
				</div>
				<div class="card-action center-align">
					<a href="/stories/{{_id}}" class="btn grey">Read More</a></div>
			</div>

		</div>
	{{else}}
		<p>No Stores to display</p>
	{{/each}}
</div>